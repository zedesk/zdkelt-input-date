{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "no-return-assign": 0,
    "semi":[2, "never"]
  },
  "globals": {
    "Polymer": true,
    "moment": true
  }
}